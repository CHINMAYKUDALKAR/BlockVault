# ============================================
# BlockVault Environment Configuration
# Copy this file to .env and update values
# ============================================

# Flask Configuration
FLASK_ENV=development  # Options: development, production
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_SECRET=your-jwt-secret-change-in-production-min-32-chars
JWT_EXP_MINUTES=60

# MongoDB Configuration
# Local: mongodb://localhost:27017/blockvault
# Docker: mongodb://mongo:27017/blockvault  
# Cloud: mongodb+srv://user:password@cluster.mongodb.net/blockvault
MONGO_URI=mongodb://localhost:27017/blockvault

# MongoDB Atlas (Cloud) Configuration (Optional)
MONGO_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/blockvault?retryWrites=true&w=majority
MONGO_USERNAME=blockvault_user
MONGO_PASSWORD=change-this-password
MONGO_CLUSTER=cluster0.xxxxx.mongodb.net
MONGO_DATABASE=blockvault

# IPFS Configuration
IPFS_ENABLED=false
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080
IPFS_API_TOKEN=

# Ethereum/Blockchain Configuration
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
ETH_PRIVATE_KEY=
FILE_REGISTRY_ADDRESS=
FILE_VERSION_REGISTRY_ADDRESS=

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Application Configuration
APP_NAME=BlockVault
APP_VERSION=2.0.0

# Storage Configuration
STORAGE_PATH=./storage
BACKUP_PATH=./backups

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=./backend.log

# Monitoring Configuration
MONITORING_ENABLED=false
SENTRY_DSN=

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@blockvault.app

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Security
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Feature Flags
ENABLE_ZKML=false
ENABLE_ZKPT=true
ENABLE_NOTARIZATION=true
ENABLE_SIGNATURES=true

# Production Overrides (uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=false
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/blockvault
# CORS_ALLOWED_ORIGINS=https://yourdomain.com
# SESSION_COOKIE_SECURE=true







